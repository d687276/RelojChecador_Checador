<%- include('../partials/header') %>

    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="glass-card w-full max-w-md rounded-3xl p-8 shadow-2xl animate__animated animate__fadeIn">

            <div class="text-center mb-10">
                <div
                    class="bg-indigo-500 w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-4 rotate-3 shadow-lg shadow-indigo-500/20">
                    <i class="fas fa-shield-halved text-white text-4xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-white tracking-tight">Admin Portal</h1>
                <p class="text-slate-400 mt-2">Ingresa tus credenciales de acceso</p>
            </div>

            <form action="/auth/login" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2 ml-1">Usuario</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500">
                            <i class="fas fa-user"></i>
                        </span>
                        <input type="text" name="user" required required id="TextUsuario" name="TextUsuario"
                            class="block w-full pl-10 pr-3 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
                            placeholder="Nombre de usuario">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2 ml-1">Contraseña</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input type="password" name="password" required id="TextPassword" name="TextPassword"
                            class="block w-full pl-10 pr-3 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
                            placeholder="••••••••">
                    </div>
                </div>

                <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 px-4 rounded-xl shadow-lg shadow-indigo-600/30 transform active:scale-95 transition-all flex items-center justify-center space-x-2">
                    <span>Entrar al Panel</span>
                    <i class="fas fa-arrow-right text-sm"></i>
                </button>
            </form>

            <div class="mt-8 text-center">
                <a href="/" class="text-indigo-400 hover:text-indigo-300 text-sm transition-colors">
                    <i class="fas fa-clock mr-1"></i> Volver al Reloj Checador
                </a>
            </div>
        </div>
    </div>


    <script>
        const form = document.querySelector('form');

        form.addEventListener('submit', async (e) => {
            e.preventDefault(); // Evita que la página se recargue

            const btn = form.querySelector('button');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Verificando...';

            // Obtenemos los datos del formulario
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/admin/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    // Si todo sale bien, mensaje de éxito y redirección
                    Swal.fire({
                        icon: 'success',
                        title: '¡Bienvenido!',
                        text: 'Accediendo al panel de administración...',
                        timer: 2000,
                        showConfirmButton: false,
                        background: '#1e293b',
                        color: '#fff'
                    }).then(() => {
                        window.location.href = '/admin'; // Ruta a la que quieres ir
                    });
                } else {
                    // SI HAY ERROR (Aquí está lo que pediste)
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de acceso',
                        text: result.message || 'Credenciales inválidas',
                        background: '#1e293b',
                        color: '#fff',
                        confirmButtonColor: '#4f46e5'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de conexión',
                    text: 'No se pudo conectar con el servidor.',
                    background: '#1e293b',
                    color: '#fff'
                });
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });
    </script>

    <%- include('../partials/footer') %>