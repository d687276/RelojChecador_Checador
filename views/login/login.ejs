<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/img/logo.png">
    <link rel="shortcut icon" href="/assets/img/logo.png" type="image/png" />
    <link rel="apple-touch-icon" href="/assets/img/logo.png">
    <title>Login | <%= app.name %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body class="bg-[#f3f4f9] min-h-screen flex items-center justify-center font-sans">

    <div class="w-full max-w-md p-4">
        <div
            class="bg-white rounded-3x1 shadow-sm border border-gray-200 overflow-hidden animate__animated animate__fadeIn">

            <div class="p-10 pb-4 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-50 rounded-2xl mb-4 shadow-sm">
                    <img src="/assets/img/logo.png" alt="Logo" class="w-16 h-16">
                </div>
                <h1 class="text-2xl font-bold text-slate-800 tracking-tight">¡Bienvenido!</h1>
            </div>

            <form action="/auth/login" method="POST" class="p-10 pt-4 space-y-5">

                <div>
                    <label
                        class="block text-[11px] font-bold text-slate-500 uppercase mb-2 ml-1 tracking-wider">Usuario</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400">
                            <i class="fas fa-user text-sm"></i>
                        </span>
                        <input type="text" required id="TextUsuario" name="TextUsuario"
                            class="w-full pl-11 pr-4 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/5 outline-none transition-all text-slate-700 placeholder:text-gray-300"
                            placeholder="Nombre de usuario">
                    </div>
                </div>

                <div>
                    <label
                        class="block text-[11px] font-bold text-slate-500 uppercase mb-2 ml-1 tracking-wider">Contraseña</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400">
                            <i class="fas fa-lock text-sm"></i>
                        </span>
                        <input type="password" required id="TextPassword" name="TextPassword"
                            class="w-full pl-11 pr-4 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/5 outline-none transition-all text-slate-700 placeholder:text-gray-300"
                            placeholder="••••••••">
                    </div>
                </div>

                <div class="flex items-center justify-between px-1" style="display: none;">
                    <label class="flex items-center text-xs text-gray-500 cursor-pointer">
                        <input type="checkbox" class="rounded border-gray-300 text-indigo-600 mr-2 focus:ring-0">
                        Recordarme
                    </label>
                    <a href="/" class="text-xs font-bold text-indigo-600 hover:text-indigo-700 transition-colors">
                        <i class="fas fa-clock mr-1"></i> Volver al Reloj
                    </a>
                </div>

                <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 rounded-2xl shadow-lg shadow-indigo-200 transition-all transform active:scale-[0.98] flex items-center justify-center space-x-2">
                    <span>ENTRAR</span>
                    <i class="fas fa-arrow-right text-sm"></i>
                </button>

            </form>
        </div>
    </div>

    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const btn = form.querySelector('button');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Verificando...';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Bienvenido!',
                        text: 'Accediendo al panel de administración...',
                        timer: 2000,
                        showConfirmButton: false,
                        confirmButtonColor: '#4f46e5'
                    }).then(() => {
                        window.location.href = '/dashboard';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de acceso',
                        text: result.message || 'Credenciales inválidas',
                        confirmButtonColor: '#4f46e5'
                    })
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de conexión',
                    text: error.message,
                    confirmButtonColor: '#4f46e5'
                });
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        window.addEventListener('load', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');

            if (error === 'cuenta_suspendida') {
                Swal.fire({
                    icon: 'warning',
                    title: 'Acceso Denegado',
                    text: 'Tu cuenta se encuentra suspendida. Contacta al administrador.',
                    confirmButtonColor: '#4f46e5'
                });
            }
        });
    </script>
</body>

</html>