    <script>
        function confirmarLogout() {
            Swal.fire({
                title: '¬øCerrar Sesi√≥n?',
                text: "Tendr√°s que ingresar tus credenciales nuevamente para entrar.",
                icon: 'warning',
                showCancelButton: true,
                background: '#1e293b', // Color de fondo de tu sidebar
                color: '#f8fafc',      // Texto claro
                confirmButtonColor: '#818cf8', // Tu color p√∫rpura
                cancelButtonColor: '#334155',  // Color slate oscuro
                confirmButtonText: 'S√≠, salir',
                cancelButtonText: 'Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Si el usuario confirma, lo enviamos a la ruta de logout
                    window.location.href = '/auth/logout';
                }
            })
        }



        // Configuraci√≥n: 15 minutos de inactividad (15 * 60 * 1000 ms)
        const TIEMPO_INACTIVIDAD = 2 * 60 * 1000;
        let temporizador;

        function reiniciarTemporizador() {
            clearTimeout(temporizador);
            temporizador = setTimeout(cerrarSesionInactiva, TIEMPO_INACTIVIDAD);
        }

        function cerrarSesionInactiva() {
            // Usamos SweetAlert2 que ya instalamos para avisar antes de sacar al usuario
            Swal.fire({
                title: 'Sesi√≥n expirada',
                text: "Se ha cerrado la sesi√≥n por inactividad para proteger tus datos.",
                icon: 'info',
                confirmButtonColor: '#818cf8',
                confirmButtonText: 'Entendido'
            }).then(() => {
                window.location.href = '/auth/logout'; // Reutilizamos tu ruta de logout
            });

            // Si no hace clic en 5 segundos, redirigir de todos modos
            setTimeout(() => { window.location.href = '/auth/logout'; }, 5000);
        }

        // Escuchar eventos de actividad del usuario
        window.onload = reiniciarTemporizador;
        window.onmousemove = reiniciarTemporizador;
        window.onkeypress = reiniciarTemporizador;
        window.onclick = reiniciarTemporizador;
        window.onscroll = reiniciarTemporizador;

    </script>



